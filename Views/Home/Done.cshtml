
@{
    ViewData["Title"] = "Done Purchase";
}

<div class="price_table">
    <div class="package package_free">
            <h3>@ViewBag.Name</h3>
            <div class="htmldesc">
                @Html.Raw(ViewBag.HtmlDescription)
            </div>
            
            <div class="price">$<div class="big">@ViewBag.BasePrice.ToString( "#.##" )</div>/mo</div>
        </div>
    
    <div class="package package_free" style="padding:20px">
        <form>
            <div class="form-group row">
                <label class="col-sm-5 col-form-label">Subscription</label>
                <div class="col-sm-5">
                 <h3 class="col-sm-5 col-form-label">@ViewBag.subscription</h3>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-5 col-form-label">Start Date</label>
                <div class="col-sm-5">
                 <h3 class="col-sm-5 col-form-label">@ViewBag.startDate</h3>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-5 col-form-label">Status</label>
                <div class="col-sm-5">
                 <h3 class="col-sm-5 col-form-label">@ViewBag.status</h3>
                </div>
            </div>

            <div class="d-flex justify-content-center text-center">
                Download and login to the app to activate your subscription on your phone
            </div>
        </form>
    </div>
</div>